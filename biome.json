{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"useImportType": "off",
				"useSelfClosingElements": "off"
			},
			"suspicious": {
				"noAssignInExpressions": "off",
				"noArrayIndexKey": "off",
				"noImplicitAnyLet": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "none",
			"indentStyle": "space",
			"indentWidth": 2
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	}
}
